// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using postgresql, mysql or sqlserver, uncomment the @db.text annotations in model Account below
    // Further reading: 
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

// Necessary for Next auth
model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? @db.Text
    access_token      String? @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? @db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?   @default("User")
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    role          Role      @default(USER)
    accounts      Account[]
    sessions      Session[]
}

enum Role {
    ADMIN
    USER
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

// Necessary for Universities
enum Modality {
    Presencial
    Hibrido
    Virtual
}

enum Type {
    Publica
    Privada
}

enum Level {
    Tecnico
    Licenciatura
    Ingenieria
    Especialidad
    Maestria
    Doctorado
}

enum Period {
    Anual
    Semestral
    Cuatrimestral
    Trimestral
    Bimestral
    Mensual
    Ciclo
}

model Career {
    id             Int        @id @default(autoincrement())
    career         Careers    @relation(fields: [name], references: [name])
    university     University @relation(fields: [universityName], references: [name])
    campus         Campus     @relation(fields: [campusId], references: [id])
    name           String
    universityName String
    campusId       Int
    level          Level
    area           String?    @default("No especificado")
    period         Period     @default(Semestral)
    duration       Int
    program        String?
    modality       Modality   @default(Presencial)
}

model Careers {
    id          Int      @id @default(autoincrement())
    name        String   @unique
    description String?
    careers     Career[]
}

model Campus {
    id           Int        @id @default(autoincrement())
    name         String
    subname      String?
    images       String[]
    direction    String
    contact      String?
    url          String?
    location     String?
    latitude     Float      @default(0)
    longitude    Float      @default(0)
    careers      Career[]
    university   University @relation(fields: [universityId], references: [id])
    region       Region     @relation(fields: [regionId], references: [id])
    universityId Int
    regionId     Int
}

model Region {
    id         Int          @id @default(autoincrement())
    name       String       @unique
    campus     Campus[]
    university University[]
}

model University {
    id          Int      @id @unique @default(autoincrement())
    name        String   @unique
    subname     String?  @unique
    logo        String
    images      String[]
    url         String?
    description String?
    type        Type     @default(Publica)
    ranking     Int?
    location    String
    country     String?  @default("MÃ©xico")
    regions     Region[]
    careers     Career[]
    campus      Campus[]
}
